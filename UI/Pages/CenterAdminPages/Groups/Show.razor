@page "/center-admin/groups/{id:int}"
@using Domain.Models

<MudContainer Class="ma-4">
     <MudPaper Elevation="0" Class="pa-4 rounded-lg">

          <MudTabs Elevation="0" Rounded="true" ApplyEffectsToContainer="true" PanelClass="pa-6">


               <ShowAboutGroupPanel Group="group" />
               <ShowGroupStudents Sycles="sycles" />



               <ShowGroupPaymentSycle Group="group" Sycles="sycles" />

          </MudTabs>

     </MudPaper>
</MudContainer>

@inject GroupClient groupClient

@code {
     [Parameter]
     public int Id { get; set; }

     protected Group? group;

     protected List<StudentPaymentRowModel>? sycles;

     protected override async Task OnParametersSetAsync()
     {
          group = (await groupClient.GetAsync(Id)).Data!;
          var sycle = (await groupClient.GetGroupSycleModel(Id)).Data!;
          await base.OnParametersSetAsync();


          sycles = sycle;


     }
}