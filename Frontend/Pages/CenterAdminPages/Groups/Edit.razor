@page "/center-admin/groups/{id:int}/edit"

<EditForm Model="@editDto" OnValidSubmit="@HandleValidSubmitAsync">
    <DataAnnotationsValidator />

    <div class="row mx-5">
        <div class="card fade-in">
            <div class="card-header">
                <h5 class="card-title mb-0">Guruhni tahrirlash</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col">
                        <div class="mb-3">
                            <label for="fullname" class="form-label">Nomi</label>
                            <InputText id="fullname" class="form-control" @bind-Value="editDto.Name" />
                            <ValidationMessage For="@(() => editDto.Name)" />
                        </div>

                        @if (errors.Count > 0)
                        {
                            <div class="mb-3">
                                <h4>Quyidagi xatolar mavjud</h4>
                                <div>
                                    @foreach (var e in errors)
                                    {
                                        <p class="text-danger">@e</p>
                                    }
                                </div>
                            </div>
                        }

                        <div class="mb-3">
                            <label class="form-label">Fan</label>
                            <InputSelect class="form-control" @bind-Value="editDto.ScienceId">
                                <option value="">Tanlang</option>
                                @foreach (var science in sciences)
                                {
                                    <option value="@science.Id">@science.Name</option>
                                }
                            </InputSelect>
                            <ValidationMessage For="@(() => editDto.ScienceId)" />
                        </div>



                        <div class="mb-3">
                            <label class="form-label">Kurs narxi</label>
                            <InputNumber class="form-control" @bind-Value="editDto.GroupPrice" />
                            <ValidationMessage For="@(() => editDto.GroupPrice)" />
                        </div>


                        <div class="mb-3">
                            <label class="form-label">O'qituvchi</label>
                            <InputSelect class="form-control" @bind-Value="editDto.TeacherId">
                                <option value="">Tanlang</option>
                                @foreach (var teacher in teachers)
                                {
                                    <option value="@teacher.Id">@teacher.FullName</option>
                                }
                            </InputSelect>
                            <ValidationMessage For="@(() => editDto.TeacherId)" />
                        </div>
                    </div>

                    <div class="col">
                        <!-- Haftaning kunlari (Days) -->
                        <div class="mb-3">
                            <label class="form-label">Dars kunlari</label>
                            @foreach (var day in Enum.GetValues<DaysOfWeek>())
                            {
                                <div class="form-check fs-12">
                                    <input class="form-check-input" type="checkbox" value="@day"
                                        checked="@editDto.Days.Contains(day)" @onchange="e => ToggleDay(day, e.Value)"
                                        id="day-@day">
                                    <label for="day-@day" class="form-check-label">@day</label>
                                </div>
                            }
                            <ValidationMessage For="@(() => editDto.Days)" />
                        </div>

                        <!-- Dars vaqtlari (Times) -->
                        <div class="mb-3">
                            <label class="form-label">Dars vaqtlari</label>
                            @for (int i = 0; i < editDto.Times.Count; i++)
                            {
                                <input type="time" class="form-control mb-2" value="@editDto.Times[i].ToString(@"hh\:mm")"
                                    @onchange="(e) => { OnTimeChanged(i, e.Value?.ToString()); }" />
                            }
                            <button type="button" class="btn btn-sm btn-secondary" @onclick="AddTime">
                                + Vaqt qo'shish
                            </button>
                            <ValidationMessage For="@(() => editDto.Times)" />
                        </div>

                        <div class="d-flex justify-content-end">
                            <button type="submit" class="btn btn-primary">Yangilash</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</EditForm>

@inject ScienceClient scienceClient
@inject TeacherClient teacherClient
@inject GroupClient groupClient
@inject NavigationManager navigationManager

@code {
    [Parameter] public int Id { get; set; }

    protected List<string> errors = new();
    private EditGroupDto editDto = new();

    protected List<Science> sciences = new();
    protected List<User> teachers = new();



    protected override async Task OnParametersSetAsync()
    {
        var groupResponse = await groupClient.GetAsync(Id);

        // Mavjud guruhni DTO ga yuklaymiz
        var group = groupResponse.Data!;


        editDto = new EditGroupDto
        {
            Name = group.Name,
            ScienceId = group.ScienceId,
            TeacherId = group.TeacherId,
            Days = group.Days.ToList(),
            Times = group.Times.ToList()
        };

        await base.OnParametersSetAsync();
    }

    protected override async Task OnInitializedAsync()
    {
        var scienceResponse = await scienceClient.GetAllAsync();
        var teacherResponse = await teacherClient.GetAllAsync();

        Console.WriteLine(scienceResponse.Success);
        Console.WriteLine(teacherResponse.Success);



        if (!scienceResponse.Success || !teacherResponse.Success)
        {
            errors.Add("Nimadir xato ketti!");
        }
        else
        {
            sciences = scienceResponse.Data!.Items;
            teachers = teacherResponse.Data!.Items;


        }

        await base.OnInitializedAsync();
    }

    private async Task HandleValidSubmitAsync()
    {
        errors = new();

        var response = await groupClient.PutAsync(Id, editDto);

        if (response.HttpStatusCode == System.Net.HttpStatusCode.BadRequest)
        {
            errors.AddRange(response.Errors.SelectMany(r => r.Errors));
        }

        if (response.HttpStatusCode == HttpStatusCode.OK)
        {
            navigationManager.NavigateTo("/center-admin/groups");
        }
    }

    private void ToggleDay(DaysOfWeek day, object? value)
    {
        bool isChecked = (bool)value!;
        if (isChecked)
        {
            if (!editDto.Days.Contains(day))
                editDto.Days.Add(day);
        }
        else
        {
            editDto.Days.Remove(day);
        }
    }

    private void AddTime()
    {
        editDto.Times.Add(new TimeOnly(9, 0));
    }

    private void OnTimeChanged(int index, string? newValue)
    {
        if (!string.IsNullOrWhiteSpace(newValue) &&
        TimeOnly.TryParse(newValue, out var time))
        {
            editDto.Times[index] = time;
        }
    }
}