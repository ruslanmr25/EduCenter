@page "/black"
@if (sciences is not null)
{
     @string.Join(",", sciences.Select(s => s.Name))
}

@if (science is not null)
{
     <DeleteItemComponent TEntity="Science" Client="@scienceClient" EntityName="@(science.Name)"
          EntityId="@(science.Id)" NotifyParent="Notify" />

}

@inject ScienceClient scienceClient
@code
{


     protected async Task Notify()
     {
          await Load();
     }


     protected Science? science;

     protected List<Science>? sciences;

     protected override async Task OnInitializedAsync()
     {
          await Load();


          await base.OnInitializedAsync();
     }


     protected async Task Load()
     {
          sciences = (await scienceClient.GetAllAsync()).Data!.Items;

          if (sciences.Count > 0)
          {


               science = (await scienceClient.GetAsync(sciences[0].Id)).Data;
          }
     }




}